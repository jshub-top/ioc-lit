    "version": "0.2.0",
    "configurations": [
        {
            "name": "example.hello",
            "request": "launch",
            "cwd": "${workspaceFolder}/example/hello",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "run",
                "dev",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "console": "integratedTerminal"
        },
        {
            "name": "example.vue",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceRoot}/example/vue/src"
        },
        {
            "name": "build",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "bun",
            "runtimeArgs": [
                "run",
                "build"
            ]
        },
        {
            "name": "dev",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "bun",
            "runtimeArgs": [
                "run",
                "dev"
            ]
        }
    ]
}
